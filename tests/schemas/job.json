{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Job Schema",
  "type": "object",

  "properties": {
    "content": {
      "description": "Content of the job" ,
      "type": "string",
      "default": "mock_item"
    },
    "cost_function": {
      "description": "List of cost function attributes",
      "type": "object",
      "properties": {
        "penalty": {
          "description": "Penalty if job not completed",
          "type": "integer",
          "default": 0
        },
        "reward": {
          "description": "Reward at a given time",
          "type": "integer",
          "default": 0
        },
        "type": {
          "description": "Type of cost function used",
          "type": "string",
          "default": "naive"
        },
        "valid_time": {
          "description": "The time the goods have to be delivered by",
          "type": "integer",
          "default": 0
        }
      },
      "required": ["penalty", "reward", "type", "valid_time"]
    },
    "creation_time": {
      "description": "Creation time of the job",
      "type": "integer"
    },
    "destination": {
      "description": "List of destination coordinates" ,
      "type": "array",
      "items":  {
        "type": "number"
      }
    },
    "pick_up": {
      "description": "List of pick up coordinates" ,
      "type": "array",
      "items":  {
        "type": "number"
      }
    },
    "uid": {
      "description": "Unique ID of a job" ,
      "type": "integer"
    }
  },
  "required": ["content", "cost_function", "creation_time", "destination", "pick_up", "uid"]
}
